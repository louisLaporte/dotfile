term xterm-256color
# start at shell 1
bind c screen 1
bind ^c screen 1
bind 0 select 10                                                            

# set information in last line
hardstatus off
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W} %c %{g}]'

# start screen
#  bash		|	htop
#		|___________
#		|	bash	
screen -t MAIN 1 bash
select MAIN
split -v
focus right
screen -t HTOP 2 htop
select HTOP
split
focus down
screen -t BASH 3 bash

# shortcut for root c-a R
bind R screen -t '% |root:' su
