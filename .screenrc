shell -$SHELL

term xterm-256color
#
# change escape caractere
escape ^a

# set information in last line
hardstatus on
# Set the hardstatus prop on gui terms to set the titlebar/icon title
termcapinfo xterm*|rxvt*|kterm*|Eterm* hs:ts=\E]0;:fs=\007:ds=\E]0;\007
hardstatus alwayslastline
# black_green [ bold_red $HOSTNAME black_green ]

#enable scrolling
termcapinfo xterm* ti@:te@
altscreen on

hardstatus string "%{= kG}%{g}[ %{B}$LOGNAME@%H%{g} - %n  ] [%= %{= kw}%?%-Lw%?%{B}( %n*%f%t%?(%u)%? )%{w}%?%+Lw%?%?%= %{g}] [ %{B}%c:%s%{g} ]"
##################################################
#		LAYOUT
##################################################
# Default layout
#
layout 'new' 0
screen -t MAIN 0 bash
# layout 1
# -------------------------------
#  bash(*)	|	top
#	        |	
#		|	
#--------------------------------			
layout 'new' 1
screen -t MAIN_1 1 bash
select MAIN
split -v
focus right
screen -t TOP 2 top
select TOP
focus left
select MAIN_1

#--------------------------------
layout 'select' 0
####################################################
#		BIND | BINDKEY
####################################################
# shortcut for root c-a R
bind R screen -t '% |root:' su

bindkey "^[c" screen 
bindkey "^[v" eval "split -v" "focus right"  
bindkey "^[s" eval "split" "focus down" 
bindkey "^[t" title
bindkey "^[d" detach
bindkey "^[k" kill
bindkey "^[q" quit
bindkey "^[x" remove
bindkey "^[o" only
# ctrl arrow
bindkey "^[[1;5D" focus left
bindkey "^[[1;5C" focus right
bindkey "^[[1;5A" focus up
bindkey "^[[1;5B" focus down
# alt 
bindkey "^[+" resize +20
bindkey "^[-" resize -20
bindkey "^[=" resize =
bindkey "^[l" layout select
