## MAIN layout 1
## -------------------------------
##  bash(*)	|	htop
##		|----------------
##		|	ssh pi	
##--------------------------------			
layout 'new' 0
screen -t MAIN 0 bash
select MAIN
split -v
focus right
screen -t HTOP 2 htop
select HTOP
split
focus down
screen -t PI 1 ssh pi
focus left
select MAIN

# SCREEN  layout 2
#---------------------------------
#  info		|	vim 
#  screen(*)	|	.screnrc
#		|		
#---------------------------------		
layout 'new' 1
screen -t INFO_SCREEN 3 info screen
select INFO_SCREEN
split -v
focus right 
screen -t SCREENRC 4 vim  $HOME/.screenrc
select SCREENRC 
focus left

# INFO layout 3
# -------------------------------
#  info info	
#--------------------------------				
layout 'new' 2
screen -t INFO_INFO 5 info info
select INFO_INFO
split -v
focus right 
screen -t BASH 6 bash
select BASH

#--------------------------------
layout 'select' 1



# shortcut for root c-a R
bind R screen -t '% |root:' su
